{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start API Server",
			"type": "shell",
			"command": "cd api_server && ../.venv/bin/python main.py",
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Start Django Web UI",
			"type": "shell",
			"command": "cd web_ui && ../.venv/bin/python manage.py runserver 127.0.0.1:8001",
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Start Sync Daemon",
			"type": "shell",
			"command": "cd web_ui && mkdir -p logs && ../.venv/bin/python manage.py sync_agents --daemon --interval 5 2>&1 | tee logs/sync.log",
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		}
	]
}